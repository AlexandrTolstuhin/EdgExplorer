<Window x:Class="EdgExplorer.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="clr-namespace:EdgExplorer.UI"
        
        Style="{DynamicResource MainWindowStyle}"

        Width="1024" Height="720"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize">

    <Window.Resources>

        <Style x:Key="MainWindowStyle" TargetType="{x:Type Window}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Window}">

                        <Border Background="#CECECE" BorderThickness="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <!--Title Bar-->
                                    <RowDefinition Height="40" />
                                    <!--Status Bar-->
                                    <RowDefinition Height="38" />
                                    <!--Bookmarks-->
                                    <RowDefinition Height="38" />
                                    <!--TabItemContent-->
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <!--Title Bar-->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <ListBox ItemsSource="{Binding DirectoryTabItems}"
                                             SelectedItem="{Binding CurrentDirectoryTabItem}">

                                        <ListBox.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal" />
                                            </ItemsPanelTemplate>
                                        </ListBox.ItemsPanel>

                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding Name}" />
                                                    <Button Command="{Binding DataContext.CloseTabItemCommand, 
                                                                RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}" 
                                                            CommandParameter="{Binding}" 
                                                            Width="{Binding ActualHeight, RelativeSource={RelativeSource Self}}"
                                                            Content="X" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>

                                    </ListBox>

                                    <Button Grid.Column="1"
                                            Command="{Binding AddTabItemCommand}"
                                            Width="{Binding ActualHeight, RelativeSource={RelativeSource Self}}"
                                            Content="+" />

                                    <StackPanel Grid.Column="3"
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top">
                                        <Button Content="_" 
                                                Width="45" Height="28" 
                                                Click="Collapse_OnClick"/>
                                        <Button Content="□"
                                                Width="45" Height="28" 
                                                Click="Expand_OnClick"/>
                                        <Button Content="Х"
                                                Width="45" Height="28" 
                                                Click="Close_OnClick"/>
                                    </StackPanel>
                                </Grid>

                                <!--Status Bar-->
                                <Grid Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="←" 
                                                Width="{Binding ActualHeight, RelativeSource={RelativeSource Self}}"/>
                                        <Button Content="→" 
                                                Width="{Binding ActualHeight, RelativeSource={RelativeSource Self}}"/>
                                        <Button Content="⟳" 
                                                Width="{Binding ActualHeight, RelativeSource={RelativeSource Self}}"/>
                                    </StackPanel>

                                    <TextBox Grid.Column="1" 
                                             VerticalContentAlignment="Center"
                                             Text="{Binding CurrentDirectoryTabItem.FilePath}" />
                                </Grid>

                                <!--Bookmarks-->
                                <Grid Row="2" Background="#F7F7F7"/>

                                <!--TabItemContent-->
                                <ContentControl Grid.Row="3"
                                                Content="{Binding CurrentDirectoryTabItem}"
                                                Background="#F7F7F7">
                                    <ContentControl.ContentTemplate>
                                        <DataTemplate>
                                            <ui:DirectoryTabItem />
                                        </DataTemplate>
                                    </ContentControl.ContentTemplate>
                                </ContentControl>

                            </Grid>
                        </Border>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

</Window>